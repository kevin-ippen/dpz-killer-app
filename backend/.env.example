# Databricks Configuration
# For local development, get these from your Databricks workspace
# For Databricks Apps deployment, these are auto-injected from app.yaml
DATABRICKS_HOST=your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=dapiXXXXXXXXXXXXXXXXXXXXXXXXXXXX
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id

# Unity Catalog Configuration
CATALOG=main
SCHEMA=default

# Application Configuration
APP_NAME=My Databricks App
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development

# API Configuration
API_PREFIX=/api
CORS_ORIGINS=["*"]

# Model Serving Endpoints (optional)
# EMBEDDING_ENDPOINT=https://your-workspace.cloud.databricks.com/serving-endpoints/your-endpoint/invocations
# LLM_ENDPOINT=https://your-workspace.cloud.databricks.com/serving-endpoints/your-llm/invocations
